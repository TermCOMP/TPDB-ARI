(format LCTRS)
(theory Ints)
(fun l0 (-> Int Int Int Int))
(fun l1 (-> Int Int Int Int))
(fun l2 (-> Int Int Int Int))
(entrypoint l0)
(rule (l0 A B C) (l1 A B C))
(rule
  (l1 A B C)
  (l1 (- A (* B B)) (+ B (* C C)) C)
  :guard
  (and (> A 0) (distinct C 0)))

(rule (l1 A B C) (l2 A B C) :guard (<= A 0))
(rule (l2 A B C) (l2 A (- B 1) C) :guard (> B 0))
