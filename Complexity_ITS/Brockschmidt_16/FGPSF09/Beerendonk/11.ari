(format LCTRS)
(theory Ints)
(fun eval (-> Int Int Int))
(fun start (-> Int Int Int))
(entrypoint start)
(rule (eval A B) (eval A A) :guard (and (>= 0 A) (= B 1)))
(rule
  (eval A B)
  (eval A A)
  :guard
  (and (and (>= B 1) (>= (+ 1 B) 0)) (>= B (+ A 1))))

(rule (eval A B) (eval A 0) :guard (and (>= A 1) (= B 1)))
(rule
  (eval A B)
  (eval A (- B 1))
  :guard
  (and (and (>= B 1) (>= (+ 1 B) 0)) (>= A B)))

(rule (start A B) (eval A B))
