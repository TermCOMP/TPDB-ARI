(format LCTRS)
(theory Ints)
(fun eval0 (-> Int Int Int Int))
(fun eval1 (-> Int Int Int Int))
(entrypoint eval0)
(rule (eval0 A B C) (eval1 A B C) :guard (>= A 1))
(rule
  (eval1 A B C)
  (eval1 A (+ B A) C)
  :guard
  (and (and (>= A (+ B 1)) (>= C (+ A 1))) (>= A 1)))

(rule
  (eval1 A B C)
  (eval1 A B (- B A))
  :guard
  (and (and (>= A (+ B 1)) (>= C (+ A 1))) (>= A 1)))

