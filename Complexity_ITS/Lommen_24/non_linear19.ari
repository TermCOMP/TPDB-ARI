(format LCTRS)
(theory Ints)
(fun l0 (-> Int Int Int Int))
(fun l1 (-> Int Int Int Int))
(fun l2 (-> Int Int Int Int))
(entrypoint l0)
(rule (l0 X1 X2 X3) (l1 X1 X2 X3))
(rule
  (l1 X1 X2 X3)
  (l1 (* 2 X1) (* 3 X2) (* X3 X3))
  :guard
  (and (< X2 X1) (< 0 X2)))

(rule (l1 X1 X2 X3) (l2 X1 X2 X3))
(rule (l2 X1 X2 X3) (l2 X1 X2 (- X3 1)) :guard (> X3 0))
