(format PTRS)

(fun loop1 1)
(fun loop2 1)
(fun double 1)
(fun triple 1)
(fun s 1)
(fun |0| 0)

(prule (loop1 y) (((loop1 (double y)) :prob 1 ) ((loop2 (double y)) :prob 1 )))
(prule (loop1 y) (((loop1 (triple y)) :prob 2 ) ((loop2 (triple y)) :prob 1 )))
(prule (loop2 (s y)) (((loop2 y) :prob 1 )))
(prule (double (s y)) (((s (s (double y))) :prob 1 )))
(prule (double |0|) ((|0| :prob 1 )))
(prule (triple (s y)) (((s (s (s (double y)))) :prob 1 )))
(prule (triple |0|) ((|0| :prob 1 )))
