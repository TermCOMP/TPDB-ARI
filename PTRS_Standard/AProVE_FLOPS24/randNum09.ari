(format PTRS)
(fun even 1)
(fun s 1)
(fun 0 0)
(fun false 0)
(fun if 2)
(fun stop 0)
(fun true 0)
(fun loop 1)
(prule (even (s 0)) ((false :prob 1 )))
(prule (if false x) ((stop :prob 1 )))
(prule (even (s (s x))) (((even x) :prob 1 )))
(prule (if true x) (((loop x) :prob 1 ) ((loop (s x)) :prob 1 )))
(prule (loop x) (((if (even x) x) :prob 1 )))
(prule (even 0) ((true :prob 1 )))
